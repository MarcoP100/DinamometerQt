{
    "version": "0.2.0",
    "configurations": [
       
        {
            "name": "Debug on Raspberry Pi3",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/display/DinamometerQt",
            "args": ["-platform", "eglfs"],
            "stopAtEntry": false,
            "cwd": "/home/display",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "169.254.0.2:2345",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "setupCommands": [
                {
                    "description": "Abilita la stampa per gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Deploy and Debug on Raspberry Pi",
            "pipeTransport": {
                "pipeProgram": "ssh",
                "pipeArgs": ["display@169.254.0.2"],
                "debuggerPath": "/usr/bin/gdb",
                "pipeCwd": "",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/project/src": "/home/marco/progettiQt/DinamometerQt/src",
                "/project/include": "/home/marco/progettiQt/DinamometerQt/include"
            }
        },

        {
            "name": "Debug on WSL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/DinamometerQt",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build on Wsl for debug",
            "sourceFileMap": {
                //"/home/marco/progettiQt/DinamometerQt": "${workspaceFolder}"
            }
        }
    ]
}
